<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/tv_user_name"
    android:elevation="5dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">


        <TextView
            android:id="@+id/tv_prd_name"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:text="@string/plan_name" />

        <TextView
            android:id="@+id/tv_prd_name_val"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/tv_prd_name"
            android:gravity="right"
            android:text="@string/plan_name" />

        <TextView
            android:id="@+id/tv_price"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_prd_name"
            android:layout_marginBottom="5dp"
            android:gravity="right"
            android:text="@string/price" />


        <TextView
            android:id="@+id/tv_price_val"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_prd_name_val"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/tv_price"
            android:gravity="right"
            android:text="@string/price" />

        <TextView
            android:id="@+id/tv_rem_bal"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_price"
            android:layout_marginBottom="5dp"
            android:text="@string/remain_bal" />

        <TextView
            android:id="@+id/tv_rem_bal_val"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_price_val"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/tv_rem_bal"
            android:gravity="right"
            android:text="@string/remain_bal" />

        <TextView
            android:id="@+id/tv_exp_date"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_rem_bal"
            android:layout_marginBottom="5dp"
            android:gravity="right"
            android:text="@string/exp_date" />

        <TextView
            android:id="@+id/tv_exp_date_val"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_rem_bal_val"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/tv_rem_bal"
            android:gravity="right"
            android:text="@string/exp_date" />


    </RelativeLayout>


</android.support.v7.widget.CardView>